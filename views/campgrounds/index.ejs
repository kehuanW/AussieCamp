<% layout('/layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/index.css">
<div class="row">
    <div class="col-8">
        <div id='cluster-map'></div>
    </div>
    <div class="col-4 overflow-auto">
        <% for (let campground of campgrounds){%>
        <div class="card mb-1">
            <div class="row">
                <div class="col-md-4 mb-md-0 p-md-3">
                    <%if(campground.images.length) {%>
                    <img class="img-fluid" src="<%= campground.images[0].url %>" alt="">
                    <% }else {%>
                    <img class="img-fluid" alt=""
                        src="https://res.cloudinary.com/dhzkes0sy/image/upload/v1657548351/YelpCamp/ep8rfba97cz0dljwfyd0.jpg">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description.slice(0,150) + "..."%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a class="stretched-link" href="/campgrounds/<%= campground._id %>"></a>
                        <!-- stretched-link -->
                    </div>
                </div>
            </div>
        </div>
        <% }%>
        <!-- <h1>All Campgrounds</h1> -->

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
        </script>

        <script src="/javascripts/clusterMap.js"></script>